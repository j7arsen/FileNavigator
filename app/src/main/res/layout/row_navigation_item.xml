<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/activity_margin_fourth"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:background="@drawable/selector_item_background">

    <ImageView
        android:id="@+id/iv_navigation_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_navigation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_navigation_icon"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        tools:text = "Ololo ololo ololol ololo ololol olololo ololol ololo"/>

</RelativeLayout>